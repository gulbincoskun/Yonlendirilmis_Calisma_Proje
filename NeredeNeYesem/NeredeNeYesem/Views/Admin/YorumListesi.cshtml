@using NeredeNeYesem.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yorum Listesi</h2>
<table class="table table-bordered table-hover">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Mekan</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <th>@x.ID</th>
            <th>@x.KullaniciAdi</th>
            <th>@x.Mail</th>
            <th>@x.Yorum</th>
            <th>@x.YemekMekanlari.Baslik</th>
            <th><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">Sil</a></th>
            <th><a href="/Admin/YorumGetir/@x.ID" class="btn btn-warning">Güncelle</a></th>
            
        </tr>
    }
</table>

